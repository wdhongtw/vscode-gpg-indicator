{
    "name": "gpg-indicator",
    "displayName": "GPG Indicator",
    "description": "Status indicator and unlocker for GPG signing key",
    "keywords": [
        "pgp",
        "gpg",
        "commit",
        "multi-root ready"
    ],
    "author": {
        "name": "Weida Hong",
        "url": "https://blog.bitisle.net"
    },
    "version": "0.6.2",
    "publisher": "wdhongtw",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon-color.png",
    "activationEvents": [
        "workspaceContains:/.git"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "gpgIndicator.unlockCurrentKey",
                "title": "Unlock Current Key",
                "category": "GPG"
            }
        ],
        "configuration": {
            "title": "GPG Indicator",
            "properties": {
                "gpgIndicator.statusRefreshInterval": {
                    "type": "number",
                    "default": 30,
                    "minimum": 1,
                    "description": "Background refresh interval (in seconds) for key status."
                },
                "gpgIndicator.outputLogLevel": {
                    "type": "string",
                    "default": "info",
                    "description": "Log level for extension log output",
                    "enum": [
                        "error",
                        "warning",
                        "info"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.14.2",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "eslint": "^8.1.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "typescript": "^4.9.5"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wdhongtw/vscode-gpg-indicator"
    },
    "preview": false
}